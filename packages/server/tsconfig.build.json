  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "types": [
      "node",
      "cors",
      "express"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./test",
    "./dist",
    "jest.config.*",
    "test/**/*.ts",
    "**/*.test.ts"
  ]
}